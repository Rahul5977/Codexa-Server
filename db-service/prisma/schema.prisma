model Problem {
  id          String     @id @default(cuid())
  title       String
  difficulty  Difficulty
  statement   String
  examples    Json[]
  constraints String[]
  tags        String[]
  hints       String[]
  companies   String[]
  testcases   Json[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}
